<%= render "template/header"%>

<div class = "list-show">
  <div class = "left-box">
    <div class="name">
      <span class="poster"><%= @list.poster %>さん</span>
      <span class="text">投稿者名</span>
    </div>
    <% if user_signed_in? && current_user.id == @list.user.id %>
      <div class = "show-btn">
        <div class = "edit-btn">
          <%= link_to "商品の編集", edit_list_path(@list.id), method: :get, class: "list-red-btn" %>
        </div>
        <div class = "destroy-btn">
          <%= link_to "削除", list_path(@list.id) , method: :delete, class: "list-destroy" %>
        </div>
      </div>
    <% end %>

    <div class = "list-img-content">
      <%#= link_to image_tag(@list.image, class: "list-box-img") %> 
      <div class="list-box-img">
        <%= image_tag(@list.image) %>
      </div>
    </div>

  </div>

  <div class = "right-box">
    <div class = "list-title">
      <%= @list.title %>
    </div>

    <div class = "list-text">
      <%= @list.text %>
    </div>
  </div>

</div>

