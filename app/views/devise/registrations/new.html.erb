<%= render "template/header"%>

<div class = "form-inner" >

  <div class = "sign-up-title" >
    <div class = "sign-title">新規登録ページ</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class = "field">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "nickname-field" %>
      </div>

      <div class = "field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field" %>
      </div>

      <div class = "field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "password-field" %>
      </div>

      <div class = "field">
        <%= f.label "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password-field" %>
      </div>

      <div class = "actions">
        <%= f.submit "新規登録", class: "sign-up-submit" %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
