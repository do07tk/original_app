<%= render "template/header"%>

<div class = "form-inner" >
  <div class = "login-title" ><h2>ログインページ</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "メールアドレス", class: "email-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field" %>
      </div>

      <div class="field">
        <%= f.label "パスワード", class: "password-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "password-field" %>
      </div>

      <%# if devise_mapping.rememberable? %>
        <%# <div class="field"> %>
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        <%# </div> %>
      <%# end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "login-submit" %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
